
@{
    ViewData["Title"] = "News";
}


<script>
    //Script for prompting the delete button
    function deleteConfirm(){
        var result = confirm("Are you sure you want to delete this?");

        if (result) {
            location.href='@Url.Action("Delete", "News", new { id = Model.Article.NewsId})';
        }
    }

</script>

@if (Session["Admin"] != null)
{
<div class="row">
    <button class="btn btn-primary text-white col-sm-4 mx-auto" onclick="location.href='@Url.Action("Edit", "News", new { id = Model.Article.NewsId})'">Edit News</button>
    <button class="btn btn-primary text-white col-sm-4 mx-auto" onclick="deleteConfirm();">Delete Article</button>

</div>
    <br />
}

<div class="row">
    <div class="col-12">
        <h1>
            @Model.Article.Title
        </h1>
    </div>
</div>

<br />

<div class="row">
    <div class="col-sm-3 col-12">
        <div class="row pb-5">
            <div class="col-3 col-sm-4">
                <img src="~/images/profile-placeholder.png" class="rounded-circle w-100" />
            </div>
            <div class="col-8 d-block d-sm-none">
                <small>@Model.ClubName</small><br />
                <small class="text-secondary">@Model.Article.PostedDate.ToString("dddd, MMMM dd, yyyy")</small>
            </div>
            <div class="col-8 d-none d-sm-block">
                <h4>@Model.ClubName</h4>
                <h4 class="text-secondary">@Model.Article.PostedDate.ToString("dddd, MMMM dd, yyyy")</h4>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h4>
            @Model.Article.Description
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-12 card text-center">
        <h4 class="font-italic text-secondary">@Model.Article.Article</h4>
    </div>
</div>

<br />

